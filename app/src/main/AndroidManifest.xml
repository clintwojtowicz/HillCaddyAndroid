<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clint.hillcaddy" >

    <application
        android:name=".GlobalVars"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateProfileActivity"
            android:label="@string/title_activity_create_profile"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clint.hillcaddy.MainActivity" />
        </activity>
        <activity
            android:name=".SelectModeActivity"
            android:label="@string/title_activity_select_mode"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clint.hillcaddy.MainActivity" />
        </activity>
        <activity
            android:name=".CourseModeActivity"
            android:label="@string/title_activity_course_mode"
            android:parentActivityName=".SelectModeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clint.hillcaddy.SelectModeActivity" />
        </activity>
        <activity
            android:name=".RangeModeActivity"
            android:label="@string/title_activity_range_mode"
            android:parentActivityName=".SelectModeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clint.hillcaddy.SelectModeActivity" />
        </activity>
        <activity
            android:name=".AddClubActivity"
            android:label="@string/title_activity_add_club"
            android:parentActivityName=".RangeModeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clint.hillcaddy.RangeModeActivity" />
        </activity>
        <activity
            android:name=".ViewShotsActivity"
            android:label="@string/title_activity_view_shots"
            android:parentActivityName=".RangeModeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clint.hillcaddy.RangeModeActivity" />
        </activity>
        <activity
            android:name=".DistanceCardActivity"
            android:label="@string/title_activity_distance_card"
            android:parentActivityName=".CourseModeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clint.hillcaddy.CourseModeActivity" />
        </activity>
        <activity
            android:name=".RecommendedClubActivity"
            android:label="@string/title_activity_recommended_club"
            android:parentActivityName=".CourseModeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clint.hillcaddy.CourseModeActivity" />
        </activity>
        <activity
            android:name=".AngleCaptureActivity"
            android:label="@string/title_activity_angle_capture"
            android:parentActivityName=".RecommendedClubActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clint.hillcaddy.RecommendedClubActivity" />
        </activity>
        <activity
            android:name=".ClubResultActivity"
            android:label="@string/title_activity_club_result"
            android:parentActivityName=".RecommendedClubActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clint.hillcaddy.RecommendedClubActivity" />
        </activity>
    </application>

</manifest>
